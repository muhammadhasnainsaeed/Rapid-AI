# Copy this file to .env and fill values. DO NOT commit your real secrets.

# Database (Neon / Postgres)
DATABASE_URL=postgresql://<DB_USER>:<DB_PASS>@<DB_HOST>/<DB_NAME>?sslmode=require

# Clerk (authentication)
CLERK_PUBLISHABLE_KEY=pk_xxx
CLERK_SECRET_KEY=sk_xxx

# Gemini / OpenAI key (or your preferred model key)
GEMINI_API_KEY=your_gemini_or_openai_key

# ClipDrop (image generation / background removal)
CLIP_DROP_API_KEY=your_clipdrop_key

# Cloudinary (image storage)
CLOUDINARY_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Optional: PORT used by local server (default in code)
PORT=3000
